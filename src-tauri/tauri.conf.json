{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeDevCommand": "bunx vite",
        "beforeBuildCommand": "bunx vite build",
        "devPath": "http://localhost:5173",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "Kafra Client",
        "version": "1.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "process": {
                "all": false,
                "relaunch": false,
                "exit": true
            },
            "fs": {
                "all": true,
                "scope": [
                    "$RESOURCE/*",
                    "$APPDATA/*",
                    "$LOCALDATA/*",
                    "$TEMP/*",
                    "$EXE/../**"
                ]
            },
            "http": {
                "all": true,
                "scope": [
                    "http://**",
                    "https://**"
                ]
            }
        },
        "bundle": {
            "active": true,
            "category": "Game",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.kafra.client",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": [
                "nsis"
            ],
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "wix": {
                    "language": "en-US"
                },
                "webviewInstallMode": {
                    "type": "embedBootstrapper"
                }
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": false,
                "title": "Kafra Client",
                "width": 900,
                "height": 600,
                "decorations": false,
                "transparent": false
            }
        ]
    }
}